<%if user_signed_in?%>
  <table class="table table-hover table-striped table-bordered mt-4">
    <thead class="table-dark">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Twitter</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @friends.each do |friend| %>
      <% if friend.user == current_user%>
      <tr id="<%= dom_id friend %>">
        <%= render friend %>
        <td>
            <%= link_to "Destroy", friend_path(friend), method: :delete, data: { "turbo-method": :delete, confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, class: "btn btn-outline-danger btn-sm"%>
        </td>
      </tr>
      <% end %>

    <% end %>
    </tbody>
  <table>

  <%= link_to "New friend", new_friend_path, class: "btn btn-secondary" %>
<% else %>
  <h1>Hello World</h1>
  First Rails Website
<% end %>
