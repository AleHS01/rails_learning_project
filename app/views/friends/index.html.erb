<h1>Friends List</h1>

<table class="table table-hover table-striped table-bordered">
  <thead class="table-dark">
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @friends.each do |friend| %>
    <tr id="<%= dom_id friend %>">
      <%= render friend %>
      <td>
        <%= link_to "Show", friend %>
      </td>
      <td>
        <%= link_to "Edit", edit_friend_path(friend)%>
      </td>
       <td>
          <%= link_to "Destroy", friend_path(friend), method: :delete, data: { "turbo-method": :delete, confirm: "Are you sure?", turbo_confirm: "Are you sure?" }%>

      </td>
    </tr>
  <% end %>
  </tbody>
<table>

<%= link_to "New friend", new_friend_path, class: "btn btn-secondary" %>
